{
  "name": "meal-planner",
  "version": "1.0.0",
  "description": "Simple weekly meal planner for baby and adult meals",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "start:dev": "tsx --watch src/server.ts",
    "seed": "tsx scripts/seed.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build && rsync -avz --delete --exclude node_modules --exclude .git --exclude '*.db*' --exclude src ./ root@192.168.50.193:~/meal-planner/"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pino": "^9.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "pino-pretty": "^11.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "pino-roll": "^1.3.0"
  }
}
