# Meal Planner Environment Configuration
# Copy this file to .env and fill in the values

# Server port (default: 3000)
PORT=3000

# Logging configuration
# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info

# Log directory for production (default: ./logs)
LOG_DIR=./logs

# Node environment: development or production
# In development: logs are pretty-printed to console
# In production: logs are written as JSON to files with rotation
NODE_ENV=development

# Backup directory for database backups (default: ./backups)
BACKUP_DIR=./backups
