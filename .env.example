# Meal Planner Environment Configuration
# Copy this file to .env and fill in the values

# Server port (default: 3000)
PORT=3000

# API key for write operations (PUT, POST, DELETE)
# Generate a secure random key for production:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Leave empty or unset to disable authentication (development only!)
MEAL_PLANNER_API_KEY=

# Logging configuration
# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info

# Log directory for production (default: ./logs)
LOG_DIR=./logs

# Node environment: development or production
# In development: logs are pretty-printed to console
# In production: logs are written as JSON to files with rotation
NODE_ENV=development
